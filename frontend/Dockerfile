# Open WebUI Frontend with Azure Integration
FROM ghcr.io/open-webui/open-webui:main

# Set environment variables for Azure deployment
ENV ENABLE_SIGNUP=false
ENV WEBUI_AUTH=true
ENV WEBUI_NAME="AI Inference Platform"
ENV ENABLE_API_KEY=true

# Expose port 8080 for Azure Container Apps
ENV PORT=8080
EXPOSE 8080
